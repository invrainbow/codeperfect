{
  "name": "@hyas/doks",
  "description": "Doks theme",
  "version": "0.3.0",
  "scripts": {
    "init": "shx rm -rf .git && git init -b main",
    "prestart": "npm run clean",
    "start": "exec-bin bin/hugo/hugo server  --bind=0.0.0.0 --disableFastRender",
    "prebuild": "npm run clean",
    "build": "exec-bin bin/hugo/hugo --gc --minify",
    "build:preview": "npm run build -D -F",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf package-lock.json bin node_modules",
    "server": "exec-bin bin/hugo/hugo server",
    "test": "npm run -s lint",
    "env": "env",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended"
  },
  "devDependencies": {
    "@babel/cli": "^7.14",
    "@babel/core": "^7.14",
    "@babel/preset-env": "^7.14",
    "@fullhuman/postcss-purgecss": "^4.0",
    "auto-changelog": "^2.3.0",
    "clipboard": "^2.0",
    "eslint": "^7.29",
    "exec-bin": "^1.0.0",
    "flexsearch": "^0.7.11",
    "highlight.js": "^11.0",
    "hugo-installer": "^3.0.1",
    "instant.page": "^5.1",
    "lazysizes": "^5.3",
    "markdownlint-cli": "^0.27",
    "mermaid": "^8.10.2",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.3.3",
    "stylelint": "^13.13",
    "stylelint-config-standard": "^22.0"
  },
  "otherDependencies": {
    "hugo": "0.84.0"
  },
  "dependencies": {
    "autoprefixer": "^10.2.6",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.4"
  }
}

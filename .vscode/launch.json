{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "debug",
            "program": "${workspaceFolder}/build/bin/ide",
            "args": [],
            "cwd": "${workspaceFolder}/build/bin",
            "expressions": "native",
            "postRunCommands": [
                "process handle -p true -s false SIGURG",
                "settings set target.process.follow-fork-mode child",
            ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "jblow tests",
            "program": "${workspaceFolder}/build/bin/ide",
            "args": [
                "--jblow-tests",
                "nonvimfuzzer",
            ],
            "cwd": "${workspaceFolder}/build/bin",
            "expressions": "native",
            "postRunCommands": [
                "process handle p true -s false SIGURG"
            ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "test",
            "program": "build/bin/test",
            "args": [
                "parser_profile"
            ],
            "cwd": "${workspaceFolder}/build/bin",
            "expressions": "native",
            "postRunCommands": [
                "process handle p true -s false SIGURG"
            ],
        },
        {
            "type": "lldb",
            "request": "custom",
            "name": "coredump",
            "initCommands": [
                "target create -c ${input:coreFileName}",
                "process handle p true -s false SIGURG"
            ],
            "expressions": "native"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "attach",
            "program": "build/bin/ide",
            "expressions": "native",
            "postRunCommands": [
                "process handle p true -s false SIGURG"
            ],
        },
    ],
    "inputs": [
        {
            "id": "coreFileName",
            "type": "promptString",
            "description": "Corefile path"
        }
    ],
}